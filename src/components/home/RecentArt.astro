---
import { getCollection } from "astro:content";
import PostPreview from "@components/shared/PostPreview.astro";
import { Button } from "@components/ui/button";

const artPosts = await getCollection("art");

const latestArtPosts = artPosts
  .sort((a, b) => a.data.date.getTime() - b.data.date.getTime())
  .slice(0, 3);
---

<div class="flex-col-standard">
  <div class="flex-row-standard">
    <h3>Recent Art</h3>

    <Button
      variant="link"
      className="p-0"
    >
      <a href="/art"> See All </a>
    </Button>
  </div>

  <div class="flex-col-standard">
    {
      latestArtPosts.map((post) => (
        <PostPreview
          id={post.id}
          title={post.data.title}
          date={post.data.date}
          category="art"
        />
      ))
    }
  </div>
</div>
