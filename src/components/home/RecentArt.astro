---
import { getCollection } from "astro:content";
import PostPreview from "@components/shared/PostPreview.astro";
import { Button } from "@components/ui/button";

import { Card, CardContent } from "@/components/ui/card";
import { Separator } from "@/components/ui/separator";

const artPosts = await getCollection("art");

const latestArtPosts = artPosts
  .sort((a, b) => a.data.date.getTime() - b.data.date.getTime())
  .slice(0, 3);
---

<div class="flex-col-standard gap-2">
  <div class="flex-row-standard">
    <h3>Recent Art</h3>

    <Button
      variant="link"
      className="p-0 text-xs xs:text-sm sm:text-base"
    >
      <a href="/art"> See All </a>
    </Button>
  </div>

  <Card className="w-full">
    <CardContent className="flex-col-standard gap-3 -mt-2 -mb-2">
      {
        latestArtPosts.map((post, idx) => (
          <PostPreview
            id={post.id}
            title={post.data.title}
            date={post.data.date}
            category="art"
          />

					<Separator className={idx === latestArtPosts.length - 1 ? "hidden" : ""} />
        ))
      }
    </CardContent>
  </Card>
</div>
