---
import { type CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"writing">;
}

const { post } = Astro.props;
---

<a class="flex h-6 w-full flex-row items-center justify-between" href={`/writing/${post.id}`}>
  <p>{post.data.title}</p>
  <p>{post.data.pubDate.toUTCString()}</p>
</a>
