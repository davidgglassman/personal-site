---
import { type CollectionEntry } from "astro:content";
import { formatDateWithOrdinal } from "src/lib/helpers";

interface Props {
  post: CollectionEntry<"art">;
}

const { post } = Astro.props;
---

<a
  class="flex w-full flex-row items-center justify-between rounded-xl border border-gray-300 p-2 px-4 hover:bg-gray-100 dark:border-gray-700 hover:dark:bg-[#282a35]"
  href={`/art/${post.id}`}>
  <p class="font-bold">{post.data.title}</p>
  <p class="text-sm text-gray-500 dark:text-gray-400">{formatDateWithOrdinal(post.data.date)}</p>
</a>
