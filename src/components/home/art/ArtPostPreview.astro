---
import { type CollectionEntry } from "astro:content";
import { formatDateWithOrdinal } from "src/lib/helpers";

interface Props {
  post: CollectionEntry<"art">;
}

const { post } = Astro.props;
---

<a class="flex h-6 w-full flex-row items-center justify-between" href={`/art/${post.id}`}>
  <p>{post.data.title}</p>
  <p>{formatDateWithOrdinal(post.data.date)}</p>
</a>
