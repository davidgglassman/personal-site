---
import { formatDateWithOrdinal } from "src/lib/helpers";

interface Props {
  id: string;
  title: string;
  date: Date;
  category: "art" | "writing";
}

const { id, title, date, category } = Astro.props;
---

<a
  class="group flex w-full flex-col items-start justify-start gap-1 sm:flex-row sm:items-center sm:justify-between"
  href={`/${category}/${id}`}
>
  <p
    class="xs:text-sm text-xs transition-all group-hover:underline sm:text-base"
  >
    {title}
  </p>
  <p class="text-primary/50 text-xs">
    {formatDateWithOrdinal(date)}
  </p>
</a>
