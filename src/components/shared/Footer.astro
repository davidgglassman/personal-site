---
import { Icon } from "astro-icon/components";
import { Button } from "@components/ui/button";
---

<header class="w-full">
  <div class="flex flex-row items-center justify-center gap-3">
    <Button
      variant="icon"
      className="w-8"
    >
      <a href="mailto:davidglassman@fastmail.com">
        <Icon
          name="mdi:email"
          class="size-6 hover:scale-110"
        />
      </a>
    </Button>

    <Button
      variant="icon"
      className="w-8"
    >
      <a
        href="https://www.linkedin.com/in/davidglassman29"
        target="_blank"
      >
        <Icon
          name="mdi:linkedin"
          class="size-6 hover:scale-110"
        />
      </a>
    </Button>

    <Button
      variant="icon"
      className="w-8"
    >
      <a
        href="https://www.instagram.com/davidgglassman/"
        target="_blank"
      >
        <Icon
          name="mdi:instagram"
          class="size-6 hover:scale-110"
        />
      </a>
    </Button>

    <Button
      variant="icon"
      className="w-8"
    >
      <a
        href="https://github.com/davidgglassman"
        target="_blank"
      >
        <Icon
          name="mdi:github"
          class="size-6 hover:scale-110"
        />
      </a>
    </Button>
  </div>
</header>
