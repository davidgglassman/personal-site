---
import { type CollectionEntry } from "astro:content";

interface Props {
  items: CollectionEntry<"art">[];
}

const { items } = Astro.props;
---

<div class="flex h-auto w-full flex-wrap items-start justify-start gap-2">
  {
    items.map((item) => (
      <a href={`/art/${item.id}`}>
        <img class="h-48" src={item.data.image} alt={item.data.title} />
      </a>
    ))
  }
</div>
