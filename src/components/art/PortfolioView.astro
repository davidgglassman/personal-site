---
import ArtItem from "@components/art/ArtItem.astro";
import { type CollectionEntry } from "astro:content";

interface Props {
  items: CollectionEntry<"art">[];
}

const { items } = Astro.props;
---

<div class="flex w-full flex-col gap-2 sm:flex-row">
  {items.map((item) => <ArtItem {item} />)}
</div>
