---
import { type CollectionEntry } from "astro:content";

interface Props {
  items: CollectionEntry<"art">[];
}

const { items } = Astro.props;
---

<div class="flex-row-standard-start flex-wrap gap-2">
  {
    items.map((item) => (
      <a href={`/art/${item.id}`}>
        <img
          class="h-48"
          src={item.data.image}
          alt={item.data.title}
        />
      </a>
    ))
  }
</div>
