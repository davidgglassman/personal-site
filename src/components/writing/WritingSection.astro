---
import { type CollectionEntry } from "astro:content";
import PostPreview from "@components/shared/PostPreview.astro";

interface Props {
  title: string;
  form: "long" | "short";
  posts: CollectionEntry<"writing">[];
}

const { title, form, posts } = Astro.props;

const p = posts
  .filter((post) => post.data.form === form)
  .sort((a, b) => a.data.pubDate.getTime() - b.data.pubDate.getTime());
---

<div class="flex w-full flex-col items-start justify-start gap-2">
  <h2 class="text-xl font-semibold dark:text-[#F8F8F3]">{title}</h2>

  <div class="flex w-full flex-col">
    {
      p.map((post) => (
        <PostPreview
          id={post.id}
          title={post.data.title}
          date={post.data.pubDate}
          category="writing"
        />
      ))
    }
  </div>
</div>
