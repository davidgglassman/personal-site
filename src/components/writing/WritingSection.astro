---
import { type CollectionEntry } from "astro:content";
import WritingPostPreview from "@components/shared/WritingPostPreview.astro";

interface Props {
  title: string;
  form: "long" | "short";
  posts: CollectionEntry<"writing">[];
}

const { title, form, posts } = Astro.props;

const p = posts
  .filter((post) => post.data.form === form)
  .sort((a, b) => a.data.pubDate.getTime() - b.data.pubDate.getTime());
---

<div class="flex w-full flex-col items-start justify-start">
  <h2 class="mb-4 text-xl font-semibold">{title}</h2>

  {p.map((post) => <WritingPostPreview post={post} />)}
</div>
