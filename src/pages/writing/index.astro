---
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";
import WritingSection from "@components/writing/WritingSection.astro";

const posts = await getCollection("writing");
---

<Layout title="Writing">
  <WritingSection
    title="Fragments / Notes"
    form="short"
    {posts}
  />

  <WritingSection
    title="Posts"
    form="long"
    {posts}
  />
</Layout>
