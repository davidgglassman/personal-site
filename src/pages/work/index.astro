---
import ExperienceSection from "@components/work/ExperienceSection.astro";
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";

const items = await getCollection("work");
---

<Layout title="Work">
  <div class="flex h-auto w-full flex-col items-center justify-start gap-8">
		{items.map((item) => (
			<ExperienceSection item={item} />
		))}
	</div>
</Layout>
