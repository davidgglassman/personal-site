---
import "@styles/global.css";
import "@fontsource/jetbrains-mono";
import { ClientRouter } from "astro:transitions";
import NavBar from "@components/shared/NavBar.astro";

interface Props {
  title: string;
}

const { title = "David Glassman" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <script>
      (() => {
        try {
          const theme = localStorage.theme;
          if (
            theme === "dark" ||
            (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)
          ) {
            document.documentElement.classList.add("dark");
          } else {
            document.documentElement.classList.remove("dark");
          }
        } catch (e) {}
      })();
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>

    <ClientRouter />
  </head>

  <body
    class="scrollbar m-0 my-8 w-full min-w-[300px] cursor-default flex-col overflow-y-auto bg-gray-50 p-0 text-left text-base leading-7 font-medium tracking-wide text-gray-900 antialiased selection:bg-gray-700 selection:text-[#CECECD] dark:bg-[#282A36] dark:text-[#CECECD]">
    <div class="mx-auto flex h-auto max-w-[50rem] flex-col justify-start gap-4 p-4">
      <NavBar />

      <div class="flex h-auto w-full flex-col items-start justify-start gap-12">
        <slot />
      </div>
    </div>
  </body>
</html>
